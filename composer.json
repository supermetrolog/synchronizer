{
    "name": "supermetrolog/synchronizer",
    "description": "files synchronizer between servers",
    "keywords": [
        "sync",
        "synchronize",
        "merge",
        "ftp",
        "filesystem",
        "file"
    ],
    "scripts": {
        "test": "./vendor/bin/phpunit -c phpunit.xml",
        "phpstan": "./vendor/bin/phpstan analyse src tests --level=6",
        "phpcs": "./vendor/bin/phpcs src -v"
    },
    "authors": [{
        "name": "supermetrolog",
        "email": "billypro6@gmail.com"
    }],
    "type": "library",
    "require": {
        "php": "^7.4",
        "psr/log": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.9",
        "squizlabs/php_codesniffer": "*"
    },
    "autoload": {
        "psr-4": {
            "Supermetrolog\\Synchronizer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "tests\\": "tests/"
        }
    },
    "license": "MIT"
}